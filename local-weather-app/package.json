{
  "name": "local-weather-app",
  "version": "2.2.0",
  "description": "weather application for freecodecamp projects",
  "main": "index.html",
  "repository": "https://github.com/carlosvigil/fcc-projects/",
  "author": "Carlos Vigil <https://carlos.network/",
  "license": "MIT",
  "scripts": {
    "build": "webpack --progress --config webpack.config.js",
    "watch-pack": "webpack --progress --watch --config webpack.config.js",
    "watch-test-pack": "webpack --progress --watch --config test.config.js",
    "watch-browser": "browser-sync start -c 'bs-config.js'",
    "dev": "npm-run-all --parallel watch-pack watch-browser",
    "test": "npm-run-all --parallel watch-test-pack watch-browser"
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "html",
      "import",
      "node",
      "promise",
      "standard"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^2.0.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "npm-run-all": "^4.0.2",
    "webpack": "^2.7.0"
  },
  "optionalDependencies": {
    "browser-sync": "^2.18.12",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0"
  },
  "dependencies": {}
}
