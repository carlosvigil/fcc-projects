{
  "name": "local-weather-app",
  "version": "2.2.1",
  "description": "weather application for freecodecamp projects",
  "main": "index.html",
  "repository": "https://github.com/carlosvigil/fcc-projects/",
  "author": "Carlos Vigil <https://carlos.network/",
  "license": "MIT",
  "scripts": {
    "build": "webpack --progress --config webpack.dev.js",
    "dev": "npm-run-all --parallel watch-pack watch-browser",
    "test": "npm-run-all --parallel watch-test-pack watch-browser",
    "watch-pack": "webpack --progress --watch --config webpack.dev.js",
    "watch-test-pack": "webpack --progress --watch --config webpack.test.js",
    "watch-browser": "browser-sync start -c 'bs-config.js'"
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "html",
      "import",
      "node",
      "promise",
      "standard"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-html": "^2.0.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "npm-run-all": "^4.1.2",
    "webpack": "^2.7.0"
  },
  "optionalDependencies": {
    "browser-sync": "^2.18.12",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  }
}
